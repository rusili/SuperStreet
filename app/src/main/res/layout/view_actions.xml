<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:background="@color/black_90_1000">

    <com.rusili.superstreet.common.ui.ShapedRippleImageButton
        android:id="@+id/actionFavorite"
        android:layout_width="@dimen/action_button_height_small"
        android:layout_height="@dimen/action_button_height_small"
        android:clickable="true"
        android:padding="@dimen/action_button_padding_small"
        android:src="@drawable/ic_bookmark" />

    <com.rusili.superstreet.common.ui.ShapedRippleImageButton
        android:id="@+id/actionShare"
        android:layout_width="@dimen/action_button_height_small"
        android:layout_height="@dimen/action_button_height_small"
        android:padding="@dimen/action_button_padding_small"
        android:clickable="true"
        android:src="@drawable/ic_share" />

</LinearLayout>
