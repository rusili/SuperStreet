<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/articleImageGroup"
    android:layout_width="match_parent"
    android:layout_height="@dimen/article_viewholder_imagegroup_height">

    <ImageView
        android:id="@+id/imageGroupImage1"
        style="@style/ArticleImageGroup"
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@+id/imageGroupImage2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/imageGroupImage2"
        style="@style/ArticleImageGroup"
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@+id/imageGroupImage3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageGroupImage1"
        tools:src="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/imageGroupImage3"
        style="@style/ArticleImageGroup"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageGroupImage2"
        tools:src="@tools:sample/backgrounds/scenic" />

</androidx.constraintlayout.widget.ConstraintLayout>