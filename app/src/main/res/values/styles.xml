<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- New MaterialComponents attributes. -->
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="scrimBackground">@color/mtrl_scrim_color</item>
        <item name="snackbarButtonStyle">?attr/borderlessButtonStyle</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">#59000000</item> <!-- Or any transparency or color you need -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- List Fragment -->
    <style name="PreviewTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="PreviewMagazine" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">@color/white_1000</item>
    </style>

    <style name="PreviewType" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">@color/white_1000</item>
    </style>

    <style name="PreviewTimestamp" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <!-- Article Fragment -->
    <style name="ArticleParagraph">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/pt_serif</item>
    </style>

    <style name="ArticleImageGroup">
    </style>

</resources>
